{% extends '::base.html.twig' %}

{% block body -%}

	<div class="titrelisteetform">

    <h1>Profils</h1>

	</div>

    <div class="listeetform avecscroll">
		    <table class="records_list table table-striped">
		    
		        <thead>
		            <tr>
		                <th>Code</th>
		                <th>Libelle</th>
		                <th>Active</th>
		                <th>Saisie le </th>
		                <th>Actions</th>
		            </tr>
		        </thead>
		        <tbody>
		        {% for entity in entities %}
		            <tr>
		                <td><a href="{{ path('profils_show', { 'id': entity.id }) }}">{{ entity.CodeProfil }}</a></td>
		                <td>{{ entity.libelleProfil }}</td>
		                <td>{{ entity.actif==1 ? "O" : "N"}}</td>
		                
		                <td>{% if entity.datecreateAt %}{{ entity.datecreateAt|date('d/m/Y') }}{% endif %}</td>
		                <td>
			                <ul>
			
			                    <li>
			                        <a href="{{ path('profils_edit', { 'id': entity.id }) }}">
					                        	<img alt="Modification" src="/web/css/images/edit.png">
			                        
			                        </a>
			                    </li>
			                </ul>
		                </td>
		            </tr>
		        {% endfor %}
		        </tbody>
		    </table>
</div>
	<div class="finlisteetform">

	     <ul>
	        <li>
	            <a href="{{ path('profils_new') }}">
			            <img alt="ajout" src="/web/css/images/add.png">
	            </a>
	        </li>
	    </ul>
	    
    </div>
    
    {% endblock %}

{% block javascripts %}

	{{ parent() }}

       <script type="text/javascript">

			$("#menu1").hide();
			$("#menu2").hide();
			$("#menu3").hide();
						
       </script>    
{% endblock %}    