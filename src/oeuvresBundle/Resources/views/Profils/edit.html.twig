{% extends '::base.html.twig' %}

{% block body -%}

	    <div class="titrelisteetform">
    		<h1>Saisie Profil </h1>		    		
    	</h1>
    
		
    <div class="listeetform">
		<div class="showform">
		<br/>
	    	
	    	{{ form_start(edit_form) }}
	    
	    	{{ form_label(edit_form.CodeProfil, 'Code') }}
			{{ form_widget(edit_form.CodeProfil) }}
			{{ form_errors(edit_form.CodeProfil) }}
	    	<br/>
	    	{{ form_label(edit_form.libelleProfil, 'Libelle') }}
			{{ form_widget(edit_form.libelleProfil) }}
			{{ form_errors(edit_form.libelleProfil) }}
	    	<br/>    		    	
	    	{{ form_label(edit_form.actif, 'Activé') }}
			{{ form_widget(edit_form.actif) }}
			{{ form_errors(edit_form.actif) }}			

	    	{{ form_end(edit_form) }}
			
	    </div>



	
	</div>

	<div class="finlisteetform">
	
			<table>
				<tr>
					<td class="tdtblactionsbdp">
				        <a href="{{ path('profils') }}">
				            <img alt="Retour à la liste" src="/web/css/images/retour_liste.png">
				        </a>				
					</td>
					{% if entity.id!=0 %}
					<td class="tdtblactionsbdp">
					    <a href="{{ path('profils_confirm_delete', { 'id': entity.id }) }}">
				             <img alt="Désactiver" src="/web/css/images/desactiver.png" width="64px" height="64px" >
					    </a>					    
				    </td>
				    {% endif %}
				</tr>
			</table>
		</div>
	


{% endblock %}


{% block javascripts %}

	{{ parent() }}

       <script type="text/javascript">

			$("#menu1").hide();
			$("#menu2").hide();
			$("#menu3").hide();
						
       </script>    
{% endblock %}    
